files:
  "/tmp/.npmrc":
    mode: "000644"
    owner: root
    group: root
    content: |
      jobs=1
      unsafe-perm=true
container_commands:
  00_node_binary:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/node /bin/node"
  00_npm_binary:
    command: "ln -sf `ls -td /opt/elasticbeanstalk/node-install/node-* | head -1`/bin/npm /bin/npm"
 # 01-undomigrate:
   # command: "./node_modules/.bin/sequelize db:migrate:undo 20180322064103-create-game-rule"
    #leader_only: true
  02-migrate:
    command: "./node_modules/.bin/sequelize db:migrate"
    leader_only: true
  03-seed:
    command: "./node_modules/.bin/sequelize db:seed --seed seeders-pulsa-price.js"
    leader_only: true
  04-seed:
    command: "./node_modules/.bin/sequelize db:seed --seed seeders-pulsaPriceId-products.js"
    leader_only: true

option_settings:
  aws:elasticbeanstalk:container:nodejs:
      NodeCommand: "npm start"
      NodeVersion: 8.8.1
